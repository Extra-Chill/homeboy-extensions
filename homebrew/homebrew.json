{
  "name": "Homebrew",
  "version": "2.0.0",
  "icon": "mug.fill",
  "description": "Homebrew tap publishing",
  "author": "Extra Chill",
  "actions": [
    {
      "id": "release.publish",
      "label": "Publish Homebrew Formula",
      "type": "command",
      "command": "bash \"{{module_path}}/scripts/publish-homebrew.sh\"",
      "payload": {
        "release": "{{payload.release}}",
        "config": "{{payload.config}}"
      }
    }
  ],
  "executable": {
    "runtime": {
      "run_command": "{{module_path}}/scripts/publish-homebrew.sh"
    }
  }
}
